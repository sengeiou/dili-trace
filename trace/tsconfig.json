//# tsc -w
{
  "compilerOptions": {
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "ES2017",
    "outDir":"./src/main/resources/static/resources/js",
    "lib": ["DOM","ES6"],
    "rootDirs": ["./src/main/resources/static/tsc"],
    "allowSyntheticDefaultImports": true,
    "listFiles": true,
    "charset": "utf8",
    "esModuleInterop": true
  },
  "include": ["./src/main/resources/static/tsc"],
  "compileOnSave": true,
  "buildOnSave": true
}