//# tsc -w
{
  "compilerOptions": {
    "skipDefaultLibCheck": true,
    "allowUmdGlobalAccess": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "alwaysStrict": false,
    "watch": true,
    "incremental": true,
    "plugins": [],
    "module": "UMD",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "sourceMap": false,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir":"./src/main/resources/static/resources/js",
    "lib": ["DOM","ES6"],
    "rootDirs": ["./src/main/resources/static/tsc"],
    "allowSyntheticDefaultImports": true,
    "listFiles": true,
    "charset": "utf8",
    "esModuleInterop": true
  },
  "include": ["./src/main/resources/static/tsc"],
  "compileOnSave": true,
  "buildOnSave": true,
  "references": []
}