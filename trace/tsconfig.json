{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "module": "ES2015",
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "ES5",
    "outDir":"./src/main/resources/static/resources/js",
    "lib": ["DOM","ES6"],
    "rootDirs": ["src/main/resources/tsc/**"],
    "allowSyntheticDefaultImports": true,
    "listFiles": true,
    "charset": "utf8"
  },
  "include": [
    "src/**/*"
  ],
  "exclude":["./bin/**"],
  "compileOnSave": true,
  "buildOnSave": true
}