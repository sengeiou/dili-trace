<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 日志名称 -->
    <property name="LOG_NAME" value="dili-trace"/>
    <!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径-->
    <property name="LOG_HOME" value="logs"/>

    <springProperty scope="context" name="maxHistory" source="log.maxHistory"/>
    <!-- 开发环境 -->
    <springProfile name="dev">
        <appender name="appender" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>[${LOG_NAME}-dev] %d |-%highlight(%-5level) [%t] [%c:%L] -| %msg%n</pattern>
            </encoder>
        </appender>
        <!-- 按照每天生成日志文件 -->
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_HOME}/${LOG_NAME}.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <!--日志文件输出的文件名-->
                <fileNamePattern>${LOG_HOME}/%d{yyyy-MM-dd}/${LOG_NAME}_%i.log.zip</fileNamePattern>
                <!--日志文件保留天数(FileNamePattern中的%d 格式有关，如果yyyy-MM-dd 则是天数)-->
                <maxHistory>${maxHistory}</maxHistory>
                <!--日志文件最大的大小-->
                <maxFileSize>10MB</maxFileSize>
            </rollingPolicy>
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>%d %-5level [${LOG_NAME}-dev] [%t] [%c:%L] -| %msg%n</pattern>
            </encoder>
        </appender>
        <jmxConfigurator/>
        <logger name="org.zalando.logbook.Logbook" level="trace" />
        <logger name="com.dili.trace" level="debug" />
        <logger name="com.dili.trace.dao" level="ERROR" />
    </springProfile>
    <!-- 测试环境 -->
    <springProfile name="test">
       
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_HOME}/${LOG_NAME}.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <!--日志文件输出的文件名-->
                <fileNamePattern>${LOG_HOME}/%d{yyyy-MM-dd}/${LOG_NAME}_%i.log.zip</fileNamePattern>
                <!--日志文件保留天数(FileNamePattern中的%d 格式有关，如果yyyy-MM-dd 则是天数)-->
                <maxHistory>${maxHistory}</maxHistory>
                <!--日志文件最大的大小-->
                <maxFileSize>10MB</maxFileSize>
            </rollingPolicy>
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>%d %-5level [${LOG_NAME}-test] [%t] [%c:%L] -| %msg%n</pattern>
            </encoder>
        </appender>
        <jmxConfigurator/>
        <logger name="org.zalando.logbook.Logbook" level="trace" />
        <logger name="com.dili.trace" level="debug" />
        <logger name="com.dili.trace.dao" level="ERROR" />
    </springProfile>
    <!-- 灰度环境 -->
    <springProfile name="pre">
        
        <!-- 按照每天生成日志文件 -->
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_HOME}/${LOG_NAME}.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <!--日志文件输出的文件名-->
                <fileNamePattern>${LOG_HOME}/%d{yyyy-MM-dd}/${LOG_NAME}_%i.log.zip</fileNamePattern>
                <!--日志文件保留天数(FileNamePattern中的%d 格式有关，如果yyyy-MM-dd 则是天数)-->
                <maxHistory>${maxHistory}</maxHistory>
                <!--日志文件最大的大小-->
                <maxFileSize>10MB</maxFileSize>
            </rollingPolicy>
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>%d %-5level [${LOG_NAME}-pre] [%t] [%c:%L] -| %msg%n</pattern>
            </encoder>
        </appender>
    </springProfile>
    <!-- 生产环境 -->
    <springProfile name="prod">
       
        <!-- 按照每天生成日志文件 -->
        <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_HOME}/${LOG_NAME}.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <!--日志文件输出的文件名-->
                <fileNamePattern>${LOG_HOME}/%d{yyyy-MM-dd}/${LOG_NAME}_%i.log.zip</fileNamePattern>
                <!--日志文件保留天数(FileNamePattern中的%d 格式有关，如果yyyy-MM-dd 则是天数)-->
                <maxHistory>${maxHistory}</maxHistory>
                <!--日志文件最大的大小-->
                <maxFileSize>10MB</maxFileSize>
            </rollingPolicy>
            <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <pattern>%d %-5level [${LOG_NAME}-prod] [%t] [%c:%L] -| %msg%n</pattern>
            </encoder>
        </appender>
    </springProfile>

    <logger name="com.netflix.loadbalancer.DynamicServerListLoadBalancer" level="warn"></logger>
    <logger name="com.alibaba.nacos.naming.push.receiver" level="warn"></logger>
    <logger name="tk.mybatis.mapper.autoconfigure.MapperCacheDisabler" level="warn"></logger>
    <logger name="springfox.documentation.spring.web.readers.operation.CachingOperationNameGenerator" level="warn"></logger>
    <logger name="org.springframework.context.support.PostProcessorRegistrationDelegate$BeanPostProcessorChecker" level="warn"></logger>
    <root level="info">
        <springProfile name="dev">
            <appender-ref ref="appender"/>
        </springProfile>
        
        <appender-ref ref="FILE"/>
    </root>
</configuration>